// Animate skill bars on scroll
window.addEventListener("scroll", () => {
  document.querySelectorAll(".skill").forEach(skill => {
    const bar = skill.querySelector(".bar i");
    const rect = skill.getBoundingClientRect();
    if (rect.top < window.innerHeight - 50) {
      bar.style.width = skill.dataset.level + "%";
      bar.style.transition = "width 1s ease-in-out";
    }
  });
});

// Handle contact form
function handleSubmit(e) {
  e.preventDefault();
  const name = e.target.name.value;
  const email = e.target.email.value;
  const message = e.target.message.value;
  const subject = encodeURIComponent("Message from " + name);
  const body = encodeURIComponent(`Name: ${name}\nEmail: ${email}\n\n${message}`);
  window.location.href = `mailto:deepalakshmij781@gmail.com?subject=${subject}&body=${body}`;
  document.getElementById("formStatus").innerText = "Opening your email client...";
}

// Update footer year
document.getElementById("year").innerText = new Date().getFullYear();
